<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p> <%= startingContent %> </p>

    <!-- Compose Button -->
    <a href="/compose" class="btn btn-primary" style="margin-bottom: 20px;">Compose New Post</a>

  <%  posts.forEach(function(post){ %>

    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>

  <% }) %>

